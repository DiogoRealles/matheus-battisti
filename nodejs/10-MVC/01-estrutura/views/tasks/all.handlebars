<section class=''>
  <div class='container'>
    <h1 class=''>Todas as tasks</h1>

    <ul class='task-list'>
      {{#each tasks}}
        <li class=''>

          {{#if this.done}}
            <a class='title' href='/'>{{this.title}}</a>
          {{else}}
            <a class='title done' href='/'>{{this.title}}</a>
          {{/if}}
          <div class='actions'>

            <form action='/tasks/updatestatus' class='' method='POST'>
              <input type='hidden' name='id' value='{{this.id}}' />
              <input type='hidden' name='done' value='{{this.done}}' />
              <button type='submit'>
                <i class='bi bi-check-lg'></i>
              </button>
            </form>

            <a class='' href='/tasks/edit/{{this.id}}'><i
                class='bi bi-pencil-square'
              ></i></a>

            <form action='/tasks/remove' class='' method='POST'>
              <input type='hidden' name='id' value='{{this.id}}' />
              <button type='submit'>
                <i class='bi bi-x-lg'></i>
              </button>
            </form>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</section>