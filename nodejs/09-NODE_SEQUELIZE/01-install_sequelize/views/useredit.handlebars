<section class=''>
  <div class='container'>

    <form class='form' action='/users/update' method='POST'>
      <h1 class='form_title'>Editando: {{user.name}}</h1>
      <input type='hidden' name='id' value='{{user.id}}' />
      <div class='form_group'>
        <label for='name' class='form_label'>
          Nome
        </label>
        <input
          value='{{user.name}}'
          class='form_control'
          id='name'
          type='text'
          name='name'
          placeholder='Digite o nome do usuário'
        />
      </div>
      <div class='form_group'>
        <label for='occupation' class='form_label'>
          Ocupação
        </label>
        <input
          value='{{user.occupation}}'
          class='form_control'
          id='occupation'
          type='text'
          name='occupation'
          placeholder='Digite o nome do usuário'
        />
      </div>
      <div class='form_group form_checkbox'>
        {{#if user.newsletter}}
          <input
            class=''
            id='newsletter'
            type='checkbox'
            name='newsletter'
            checked
          />
        {{else}}
          <input class='' id='newsletter' type='checkbox' name='newsletter' />
        {{/if}}
        <label for='newsletter' class='form_label'>
          Enviar promoções?
        </label>
      </div>
      <div class='form_group'>
        <button class='form_btn' type='submit'>Cadastrar</button>
      </div>
    </form>

    <form class='form' action='/address/create' method='POST'>
      <h2 class='form_title'>Endereços:</h2>
      <input type='hidden' name='UserId' value='{{user.id}}' />
      <div class='form_group'>
        <label class='form_label' for='street'>Rua:</label>
        <input
          class='form_control'
          type='text'
          name='street'
          placeholder='Digite a rua'
        />
      </div>
      <div class='form_group'>
        <label class='form_label' for='number'>Número:</label>
        <input
          class='form_control'
          type='text'
          name='number'
          placeholder='Digite o núemro da residência'
        />
      </div>
      <div class='form_group'>
        <label class='form_label' for='city'>Cidade:</label>
        <input
          class='form_control'
          type='text'
          name='city'
          placeholder='Digite a cidade'
        />
      </div>
      <button class='form_btn' type='submit'>Incluir endereço</button>
    </form>

    <div class='address-list'>
      <h2>Lista de endereços:</h2>
      {{#each user.Addresses}}
        <div>
          #{{this.id}}
          -
          {{this.street}}
          -
          {{this.number}}
          -
          {{this.city}}
          <form action='/address/delete' method='POST'>
            <input type='hidden' name='UserId' value='{{this.UserId}}' />
            <input type='hidden' name='id' value='{{this.id}}' />
            <button class='form_btn' type='submit'>Ecluir</button>
          </form>
        </div>
      {{/each}}
    </div>
  </div>
</section>